{
  "info": {
    "name": "Nexora001 Complete API",
    "description": "Complete API collection for Nexora001 - Docker Deployment",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://46.250.244.245/api",
      "type": "string"
    },
    {
      "key": "local_url",
      "value": "http://localhost/api",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "api_key",
      "value": "",
      "type": "string"
    },
    {
      "key": "test_email",
      "value": "test@example.com",
      "type": "string"
    },
    {
      "key": "test_password",
      "value": "Test123456!",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Authentication",
      "item": [
        {
          "name": "Register New User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    console.log('User registered successfully');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"password\": \"{{test_password}}\",\n  \"name\": \"Test User\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login (Get Token)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', jsonData.access_token);",
                  "    console.log('Token saved: ' + jsonData.access_token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "username",
                  "value": "{{test_email}}",
                  "type": "text"
                },
                {
                  "key": "password",
                  "value": "{{test_password}}",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/me",
              "host": ["{{base_url}}"],
              "path": ["auth", "me"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\",\n  \"email\": \"{{test_email}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/me",
              "host": ["{{base_url}}"],
              "path": ["auth", "me"]
            }
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"new_password\": \"NewPassword123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/password",
              "host": ["{{base_url}}"],
              "path": ["auth", "password"]
            }
          }
        },
        {
          "name": "Generate API Key (Widget)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('api_key', jsonData.key);",
                  "    console.log('API Key saved: ' + jsonData.key);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/api-key",
              "host": ["{{base_url}}"],
              "path": ["auth", "api-key"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Chat & RAG",
      "item": [
        {
          "name": "Chat (Dashboard - JWT Auth)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"What is machine learning?\",\n  \"use_history\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/chat/",
              "host": ["{{base_url}}"],
              "path": ["chat", ""]
            }
          }
        },
        {
          "name": "Chat (Widget - API Key Auth)",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-API-Key",
                "value": "{{api_key}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"Explain neural networks\",\n  \"use_history\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/chat/widget",
              "host": ["{{base_url}}"],
              "path": ["chat", "widget"]
            }
          }
        },
        {
          "name": "Get Chat History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/chat/history",
              "host": ["{{base_url}}"],
              "path": ["chat", "history"]
            }
          }
        },
        {
          "name": "Clear Chat History",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/chat/clear-history",
              "host": ["{{base_url}}"],
              "path": ["chat", "clear-history"]
            }
          }
        }
      ]
    },
    {
      "name": "3. Ingestion",
      "item": [
        {
          "name": "Crawl URL",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('job_id', jsonData.job_id);",
                  "    console.log('Job ID: ' + jsonData.job_id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"url\": \"https://example.com\",\n  \"max_depth\": 2,\n  \"follow_links\": true,\n  \"use_playwright\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/ingest/url",
              "host": ["{{base_url}}"],
              "path": ["ingest", "url"]
            }
          }
        },
        {
          "name": "Get Crawl Job Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/ingest/url/{{job_id}}",
              "host": ["{{base_url}}"],
              "path": ["ingest", "url", "{{job_id}}"]
            }
          }
        },
        {
          "name": "Get All Crawl Jobs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/ingest/jobs?limit=20&skip=0",
              "host": ["{{base_url}}"],
              "path": ["ingest", "jobs"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "skip",
                  "value": "0"
                }
              ]
            }
          }
        },
        {
          "name": "Upload PDF/DOCX File",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/your/document.pdf"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/ingest/file",
              "host": ["{{base_url}}"],
              "path": ["ingest", "file"]
            }
          }
        }
      ]
    },
    {
      "name": "4. Documents",
      "item": [
        {
          "name": "List All Documents",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/documents?page=1&page_size=20",
              "host": ["{{base_url}}"],
              "path": ["documents"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "page_size",
                  "value": "20"
                },
                {
                  "key": "source_type",
                  "value": "web",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Document Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/documents/stats",
              "host": ["{{base_url}}"],
              "path": ["documents", "stats"]
            }
          }
        },
        {
          "name": "Delete Document by ID",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/documents?doc_id=YOUR_DOCUMENT_ID",
              "host": ["{{base_url}}"],
              "path": ["documents"],
              "query": [
                {
                  "key": "doc_id",
                  "value": "YOUR_DOCUMENT_ID"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Documents by Source URL",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/documents/by-source?source_url=https://example.com",
              "host": ["{{base_url}}"],
              "path": ["documents", "by-source"],
              "query": [
                {
                  "key": "source_url",
                  "value": "https://example.com"
                }
              ]
            }
          }
        },
        {
          "name": "Delete ALL Documents (Dangerous)",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/documents/all?confirm=true",
              "host": ["{{base_url}}"],
              "path": ["documents", "all"],
              "query": [
                {
                  "key": "confirm",
                  "value": "true"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "5. System",
      "item": [
        {
          "name": "System Status",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/status",
              "host": ["{{base_url}}"],
              "path": ["status"]
            }
          }
        },
        {
          "name": "Health Check",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://46.250.244.245/health",
              "protocol": "http",
              "host": ["46", "250", "244", "245"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "API Root",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/",
              "host": ["{{base_url}}"],
              "path": [""]
            }
          }
        }
      ]
    },
    {
      "name": "6. Notifications",
      "item": [
        {
          "name": "Get My Notifications",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/notifications/",
              "host": ["{{base_url}}"],
              "path": ["notifications", ""]
            }
          }
        },
        {
          "name": "Mark Notification as Read",
          "request": {
            "method": "PUT",
            "header": [],
            "url": {
              "raw": "{{base_url}}/notifications/NOTIFICATION_ID/read",
              "host": ["{{base_url}}"],
              "path": ["notifications", "NOTIFICATION_ID", "read"]
            }
          }
        }
      ]
    },
    {
      "name": "7. Admin (Super Admin Only)",
      "item": [
        {
          "name": "List All Users",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/admin/users",
              "host": ["{{base_url}}"],
              "path": ["admin", "users"]
            }
          }
        },
        {
          "name": "Create Client Manually",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newclient@example.com\",\n  \"name\": \"New Client\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/client",
              "host": ["{{base_url}}"],
              "path": ["admin", "client"]
            }
          }
        },
        {
          "name": "Ban User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/ban",
              "host": ["{{base_url}}"],
              "path": ["admin", "ban"]
            }
          }
        },
        {
          "name": "Unban User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/unban",
              "host": ["{{base_url}}"],
              "path": ["admin", "unban"]
            }
          }
        },
        {
          "name": "Delete Client",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/admin/client?email=user@example.com",
              "host": ["{{base_url}}"],
              "path": ["admin", "client"],
              "query": [
                {
                  "key": "email",
                  "value": "user@example.com"
                }
              ]
            }
          }
        },
        {
          "name": "Send Notification to User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"message\": \"Your subscription has been updated\",\n  \"type\": \"info\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/notify",
              "host": ["{{base_url}}"],
              "path": ["admin", "notify"]
            }
          }
        }
      ]
    }
  ]
}
